<div>
  <h1>Gym Classes Page</h1>

<div class = "table-container">

  <table>
    <% for gymclass in @gym_classes %>
    <tr>
      <td><%= gymclass.gymclass_name %></td>
      <td>
        <form action="/gym_classes/<%= gymclass.id%>">
          <input type="submit" value="View Class Details"/>
        </form>
      </td>
    </tr>

    <% end %>
  </table>

  </div>
  <form method ="get" action="/gym_classes/new">
    <input type="submit" value="New Class"/>
  </form>

</div>
