<h1>Booking Gym Member to Class</h1>

<form action="/gym_classes/<%= @gym_class.id %>/bookings" method="post">
  <label>
    Select a member:
    <select name="member_id">
      <% for member in @members %>
      <option value="<%= member.id %>"><%= member.first_name %></option>
      <% end %>
    </select>
  </label>
  <br />
  <input type='submit' value="Add to class">
</form>

</div>
